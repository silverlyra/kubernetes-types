{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext"],
    "outDir": "lib",
    "rootDir": "src",
    "module": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "pretty": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "bin/**"]
}
